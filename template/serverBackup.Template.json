{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "userPrincipleId": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "docker-mc-rg"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageContainerName": {
            "type": "string"
        },
        "environment": {
            "type": "string",
            "allowedValues": ["prod", "test"]
        }
    },
    "variables": {
        "uniqueRoleAssignmentName": "[guid(subscription().subscriptionId)]",
        "storageBlobDataContributor": "ba92f5b4-2d11-453d-a403-e96b0029c9fe",
        "commonTags": {
            "docker-mc-env": "[parameters('environment')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "name": "[parameters('resourceGroupName')]",
            "location": "[parameters('location')]",
            "tags": "[variables('commonTags')]"
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-10-01-preview",
            "name": "[variables('uniqueRoleAssignmentName')]",
            "properties": {
                "roleDefinitionId": "[
                    concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', variables('storageBlobDataContributor'))]",
                "principalId": "[parameters('userPrincipleId')]"
            },
            "tags": "[variables('commonTags')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "docker-mc-backups-storage-deployment",
            "dependsOn": [
                "[parameters('resourceGroupName')]",
                "[variables('uniqueRoleAssignmentName')]"
            ],
            "resourceGroup": "[parameters('resourceGroupName')]",
            "tags": "[variables('commonTags')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2021-09-01",
                            "name": "[parameters('storageAccountName')]",
                            "location": "[parameters('location')]",
                            "sku": {
                                "name": "Standard_LRS",
                                "tier": "Standard"
                            },
                            "kind": "StorageV2",
                            "properties": {
                                "accessTier": "Hot"
                            },
                            "tags": "[variables('commonTags')]"
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts/blobServices",
                            "apiVersion": "2021-09-01",
                            "name": "[concat(parameters('storageAccountName'), '/default')]",
                            "dependsOn": [
                                "[parameters('storageAccountName')]"
                            ],
                            "sku": {
                                "name": "Standard_LRS",
                                "tier": "Standard"
                            },
                            "tags": "[variables('commonTags')]"
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
                            "apiVersion": "2021-09-01",
                            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('storageContainerName'))]",
                            "dependsOn": [
                                "[parameters('storageAccountName')]"
                            ],
                            "properties": {
                                "publicAccess": "Blob"
                            },
                            "tags": "[variables('commonTags')]"
                        }
                    ]
                }
            }
        }
    ]
}